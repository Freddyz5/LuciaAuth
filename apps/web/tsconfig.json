{
  "extends": "@example/tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "next.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "#core/*": ["../../packages/core/*"],
      "#styles/*": ["styled-system/*"]
    },
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}
